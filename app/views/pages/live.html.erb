	<div class="span5 offset3" align="center" style="padding-left: 0px;">
		<!-- flash_notice to show if form submission is successful -->
		<div class="livealert alert-notice" id="form-success" style="display: none;">
			You've raised your hand, Dr Aapro will take your question shortly.
		</div>

		<!-- flash_notice to show if form submission is unsuccessful -->
		<div class="livealert alert-notice" id="form-error" style="display: none;">
			Please fill in all fields.
		</div>

		<h4 style="color:#390;">To ask a question, please type your name in the box below and click "Raise your hand".</h4>


		<div id="flash_notice" style="display:none"></div>
			<%= simple_form_for @message, :url => contact_path, method: :post, remote: true do |form| %>

	  	<%= form.input :name, label: 'Name'%>

	  <br>
	  <fieldset class="actions">
	    <%= form.submit "Raise your hand", class: 'btn btn-primary btn-large' %>
	  </fieldset>
	</div>
<% end %>
</div>
</div>
<br />
<p align="center">If you experience difficulties playing the video, please visit the <%= link_to "Help Centre", help_path %>.</p>
